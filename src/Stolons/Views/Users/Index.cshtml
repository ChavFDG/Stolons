@model IEnumerable<Stolons.Models.Users.User>

<h2>Liste de tous les adhérents</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(item => item.Id)
        </th>
        <th>
            @Html.DisplayNameFor(item => item.Name)
        </th>
        <th>
            @Html.DisplayNameFor(item => item.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(item => item.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(item => item.Cotisation)
        </th>
        <th>
            @Html.DisplayNameFor(item => item.Enable)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cotisation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Enable)
            </td>
            <td>
                <div class="dropdown">
                    <a class="dropdown-toggle btn btn-small btn-default" data-toggle="dropdown" href="#">
                        Actions
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        @if (item.Cotisation == false)
                        {
                            <li><a asp-action="PayCotisation" asp-route-id="@item.Id">Payer la cotisation</a></li>
                        }
                        @if (item.Enable == true)
                        {
                            <li><a asp-action="Disable" asp-route-id="@item.Id">Désactiver le compte</a></li>
                        }
                        else
                        {
                            <li><a asp-action="Enable" asp-route-id="@item.Id">Activer le compte</a></li>
                        }
                    </ul>
                </div>
            </td>
        </tr>
    }
</table>
       

@using Stolons.Models.Users;
@using Stolons.Models.Messages;
@model News
 

<script type='text/javascript'>
    $(document).ready(function () {
        $.datepicker.setDefaults($.datepicker.regional["fr"]);
        $.timepicker.setDefaults($.timepicker.regional['fr']);
        $('#InputPublishEnd').datetimepicker();
        $('#InputPublishStart').datetimepicker();
        });
</script>

<div class="form-horizontal">
    <hr />
    <input asp-for="DateOfPublication" hidden="hidden" />
    <input asp-for="ImageLink" hidden="hidden" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="PublishAs" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select id="PublishAs" class="form-control valid" name="PublishAs" data-val="true" aria-required="true" aria-invalid="false" aria-describedby="UserRole-error">
                @if (Model.User is Producer)
                {
                    <option value="0">Producteur</option>
                }
                @if (User.IsInRole(Configurations.Role.Volunteer.ToString()) || User.IsInRole(Configurations.Role.WebAdmin.ToString()))
                {
                    <option value="1">Stolon</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="IsHighlight" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="IsHighlight" class="form-control" />
            <span asp-validation-for="IsHighlight" class="text-danger" />
        </div>
    </div>
    <div class="form-group" id="PublishStart">
        <label asp-for="PublishStart" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="PublishStart" class="form-control" id="InputPublishStart" asp-format="{0:dd/MM/yyyy HH:mm}" />
            <span asp-validation-for="PublishStart" class="text-danger" />
        </div>
    </div>
    <div class="form-group" id="PublishEnd">
        <label asp-for="PublishEnd" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="PublishEnd" class="form-control" id="InputPublishEnd" asp-format="{0:dd/MM/yyyy HH:mm}" />
            <span asp-validation-for="PublishEnd" class="text-danger" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Content" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <textarea rows="5" asp-for="Content" class="form-control"></textarea>
            <span asp-validation-for="Content" class="text-danger" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ImageLink" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input type="file" accept="image/*" name="uploadFile" class="form-control" />
        </div>
    </div>
</div>
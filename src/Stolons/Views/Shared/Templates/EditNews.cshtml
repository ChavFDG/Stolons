@using Stolons.Models.Users;
@model Stolons.Models.Messages.News


<div class="form-horizontal">
    <hr />
    <input asp-for="DateOfPublication" hidden="hidden" />
    <input asp-for="ImageLink" hidden="hidden" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="NewsType" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select id="NewsType" class="form-control valid" name="NewsType" data-val="true" aria-required="true" aria-invalid="false" aria-describedby="UserRole-error">
                @if (User.IsInRole(Configurations.Role.Volunteer.ToString()) || User.IsInRole(Configurations.Role.Administrator.ToString()))
                {
                    <option value="0">Stolon</option>
                }
                @if (Model.User is Producer)
                {
                    <option value="1">Producteur</option>
                }
            </select>
        </div>


    </div>
    <div class="form-group">
        <label asp-for="Content" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <textarea rows="5" asp-for="Content" class="form-control"></textarea>
            <span asp-validation-for="Content" class="text-danger" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ImageLink" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input type="file" accept="image/*" name="uploadFile" class="form-control" />
        </div>
    </div>
</div>

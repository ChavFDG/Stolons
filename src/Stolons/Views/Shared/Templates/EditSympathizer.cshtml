@model Stolons.ViewModels.Sympathizers.SympathizerViewModel

<div class="form-horizontal">
    <hr />
    <input asp-for="Sympathizer.Id" hidden="hidden" />
    <input asp-for="Sympathizer.Cotisation" hidden="hidden" />
    <input asp-for="Sympathizer.Enable" hidden="hidden" />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Sympathizer.Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Sympathizer.Name" class="form-control" />
            <span asp-validation-for="Sympathizer.Name" class="text-danger" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Sympathizer.Surname" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Sympathizer.Surname" class="form-control" />
            <span asp-validation-for="Sympathizer.Surname" class="text-danger" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Sympathizer.PostCode" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Sympathizer.PostCode" class="form-control" />
            <span asp-validation-for="Sympathizer.PostCode" class="text-danger" />
        </div>
    </div>
</div>

<script id="producerModalTemplate" type="text/template">
  <div id="producerModalTemplate" class="modals modal">
    <div class="modal-dialog">
        <div class="modal-content">
	        <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                <div class="producerModalTitle">
                    <div class="producerModalAvatar">
                        <img class="avatar" src="<%= producer.AvatarFilePath %>" />
                    </div>
                    <span class="producerModalName"><a href="/producers/index"><%= producer.CompanyName %></a></span>
                </div>	
	        </div>
	        <div class="modal-body">
	          <ul class="producerInfoList">
                <li>
                    <label>Adresse: </label>
                    <span>Cours du palais 07000 privas</span>
                </li>
                <li>
                    <label>Panier: </label>
                    <span>Récupération: Jeudi de 15h00 à 18h30</span>
                </li>
	            <li>
	              <label>Proprietaire: </label>
	              <span><%= producer.Name %> <%= producer.Surname %> </span>
	            </li>
	            <li>
	              <label>Superficie de production: </label>
	              <span><%= producer.Area %> m<sup>2</sup> </span>
	            </li>
	            <% if (producer.Production) { %>
	            <li>
	              <label>Production: </label>
	              <span><%= producer.Production %></span>
	            </li>
	            <% } %>
	            <li>
	              <label>Année d'installation: </label>
	              <span><%= producer.StartDate %></span>
	            </li>
	            <% if (producer.WebSiteLink) { %>
	            <li>
	              <label>Site web: </label>
	              <a href="<%= producer.WebSiteLink %>"><%= producer.WebSiteLink %></a>
	            </li>
	            <% } %>
	            <% if (producer.OpenText) { %>
	            <li>
	              <label>Le mot du producteur: </label>
	              <span class="producerOpenText">
		        <%= producer.OpenText %>
	              </span>
	            </li>
	            <% } %>
	          </ul>
                <div class="text-center"><a href="#" class="main-links" data-toggle="modal" data-target="#connexion">Voir et contacter</a></div>
	        </div>
        </div>
    </div>
  </div>
</script>

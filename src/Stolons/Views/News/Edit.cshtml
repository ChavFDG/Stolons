@model Stolons.Models.News

@{
    ViewData["Title"] = "Modification de la nouvelle de " + Model.User.Surname + " " + Model.User.Name + " du " + Model.DateOfPublication;
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Title" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Message" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea rows="5" asp-for="Message" class="form-control"></textarea>
                <span asp-validation-for="Message" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ImageLink" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="file" accept="image/*" name="uploadFile" class="form-control" />
            </div>
        </div>
        <input asp-for="ImageLink" hidden="hidden" />
        <input asp-for="DateOfPublication" hidden="hidden" />
        <div class="form-group">
          <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Sauvegarder" class="btn btn-default" />
          </div>
        </div>
    </div>
</form>

<div>
  <a asp-action="Index">Retourner aux nouvelles</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

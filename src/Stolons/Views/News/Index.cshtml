@using System.Security.Claims
@using Stolons.Services
@using Stolons.Models.Users

@model IEnumerable<Stolons.Models.Messages.News>

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Nouvelles de l'association et des producteurs";
}

<h2>@ViewData["Title"]</h2>


@if (SignInManager.IsSignedIn(User))
{
    if (User.IsInRole(Configurations.Role.Administrator.ToString())
                        || User.IsInRole(Configurations.Role.Creator.ToString())
                        || User.IsInRole(Configurations.Role.Volunteer.ToString())
                        || User.IsInRole(Configurations.UserType.Producer.ToString()))
    {
        <p>
            <a asp-action="Create" class="btn btn-small btn-default">Ajouter une nouvelle</a>
        </p>
    }
}
<table class="table">
    @foreach (var item in Model.OrderByDescending(x => x.DateOfPublication))
    {
        <tr>
            <td class="tdImageNews">
                <img src="@Configurations.GetUrl(item.ImageLink)" class="newsThumnail responsiveImage">
            </td>
            <td class="newsInfos">
                <h3>@Html.DisplayFor(modelItem => item.Title)</h3>

                <div class="newsContent">
                    @Html.Raw(item.Content)
                </div>

                <div class="newsAuthor">
                    <div class="nextToDiv">
                        @switch (item.NewsType)
                        {
                            case Stolons.Models.Messages.NewsType.Producer:
                                <img class="avatar userNewsAvatar" src="@item.User.Avatar" />
                                break;
                            case Stolons.Models.Messages.NewsType.Stolon:
                                <img class="avatar userNewsAvatar" src="@item.Stolon.LogoFilePath" />
                                break;
                        }
                    </div>
                    @switch (item.NewsType)
                    {
                        case Stolons.Models.Messages.NewsType.Producer:
                            <a asp-action="PartialDetail" asp-controller="Producers" asp-route-id="@item.User.Id">@((item.User as Producer).CompanyName)</a>
                            break;
                        case Stolons.Models.Messages.NewsType.Stolon:
                            @item.Stolon.Label
                            break;
                    }
                    @item.DateOfPublication.ToString("le dd/MM/yyyy à HH:mm:ss")
                    @if (User.Identity.Name == item.User.Email 
                        || User.IsInRole(Configurations.Role.Administrator.ToString())
                        || User.IsInRole(Configurations.Role.Volunteer.ToString())
                        || User.IsInRole(Configurations.Role.Creator.ToString()))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-small btn-default">Modifier</a>
                    }
                    @if (User.IsInRole(Configurations.Role.Administrator.ToString()) || User.IsInRole(Configurations.Role.Creator.ToString()) || UserManager.GetUserId(User) == item.User.Email)
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-small btn-default">Supprimer</a>
                    }
                </div>
            </td>
        </tr>
    }
</table>

@if (!Model.Any())
{
    <span>Aucune nouvelle pour l'instant</span>
}

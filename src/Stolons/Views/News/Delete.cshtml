@model Stolons.Models.Messages.News

@{
    ViewData["Title"] = "Suppression de la nouvelle de "+ Model.PublishBy.Adherent.Surname + " " + Model.PublishBy.Adherent.Name + " du " + Model.DateOfPublication;
}

<h2>@ViewData["Title"]</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DateOfPublication)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DateOfPublication)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PublishStart)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PublishStart)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PublishEnd)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PublishEnd)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd>
            @Html.Raw(Model.Content)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <div class="form-actions no-color">
            <input type="submit" value="Supprimer" class="btn btn-small btn-default" />
        </div>
    </form>
</div>

@model Stolons.ViewModels.Stolons.StolonViewModel


<h2>@("Edition de " + Model.Stolon.Label)</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    @Html.Partial("Templates/EditStolon")
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Sauvegarder les modifications" class="btn btn-small btn-default" />
        </div>
    </div>
</form>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>tinymce.init({ selector: 'textarea', language: 'fr_FR', menubar: false });</script>
}
@model Stolons.ViewModels.Producers.ProducerViewModel

@{
    ViewData["Title"] = "Edition du producteur : " + Model.Producer.CompanyName;
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" enctype="multipart/form-data">
  @Html.Partial("Templates/EditProducer")
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <input type="submit" value="Editer" class="btn btn-default" />
    </div>
  </div>
</form>

<div>
    <a asp-action="Index">Retourner aux producteurs</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

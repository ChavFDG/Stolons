@model Stolon
@using Stolons.Helpers;

@{
    ViewData["Title"] = "Configuration du site web";
}

<h2>@ViewData["Title"]</h2>
<p>Mode actuel : <b>@(EnumHelper<Stolon.Modes>.GetDisplayValue(Configurations.Mode))</b></p>
@if (Configurations.Stolon.IsModeSimulated)
{
    <a asp-action="SwitchMode" class="btn btn-small btn-default">@(Configurations.Mode == Stolon.Modes.DeliveryAndStockUpdate ? "Passer en mode Commande" : "Passer en mode Livraison et mise à jour des stocks")</a>
}

<div>
    <h4>Configuration de la structure</h4>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Label)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Label)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ProducersFee)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProducersFee)%
        </dd>
    </dl>
    <h4>Configuration des cotisations</h4>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.SympathizerSubscription)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SympathizerSubscription)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ConsumerSubscription)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ConsumerSubscription)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ProducerSubscription)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProducerSubscription)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.SubscriptionStartMonth)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SubscriptionStartMonth)
        </dd>
    </dl>

    <h4>Configuration des pages du site</h4>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.AboutPageText)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AboutPageText)
        </dd>       
    </dl>
    <h4>Courriel de contact</h4>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ContactMailAddress)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ContactMailAddress)
        </dd>
    </dl>
        
    <h4>Courriel de Stolons pour envoie des messages aux utilisateurs</h4>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.MailAddress)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MailAddress)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.MailPassword)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MailPassword)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.MailSmtp)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MailSmtp)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.MailPort)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MailPort)
        </dd>
    </dl>
    <h4>Message d'information utilisateurs</h4>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.OrderDeliveryMessage)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.OrderDeliveryMessage)
        </dd>
    </dl>
    <h4>Début des commandes :</h4>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.OrderDayStartDate)
        </dt>
        <dd>
            @Model.OrderDayStartDate.ToFrench()
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.OrderHourStartDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.OrderHourStartDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.OrderMinuteStartDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.OrderMinuteStartDate)
        </dd>
    </dl>
    <h4>Début livraison et mise à jour des stocks :</h4>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DeliveryAndStockUpdateDayStartDate)
        </dt>
        <dd>
            @Model.DeliveryAndStockUpdateDayStartDate.ToFrench()
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DeliveryAndStockUpdateDayStartDateHourStartDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DeliveryAndStockUpdateDayStartDateHourStartDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DeliveryAndStockUpdateDayStartDateMinuteStartDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DeliveryAndStockUpdateDayStartDateMinuteStartDate)
        </dd>
    </dl>
    <h4>Simulation :</h4>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.IsModeSimulated)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IsModeSimulated)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.SimulationMode)
        </dt>
        <dd>
            @(EnumHelper<Stolon.Modes>.GetDisplayValue(Model.SimulationMode))
        </dd>
    </dl>
</div>
<p>
    <a asp-action="Edit" class="btn btn-small btn-default">Modifier</a>
</p>

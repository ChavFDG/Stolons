@model Stolons.ViewModels.Sympathizers.SympathizerViewModel

@{
    ViewData["Title"] = "Suppresion de : " + Model.Sympathizer.Surname +" " + Model.Sympathizer.Name;
}

<h2>@ViewData["Title"]</h2>

<h3>Etes vous sur de vouloir supprimer @Model.Sympathizer.Surname @Model.Sympathizer.Name ?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Sympathizer.Id)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Sympathizer.Id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Sympathizer.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Sympathizer.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Sympathizer.Surname)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Sympathizer.Surname)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Sympathizer.RegistrationDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Sympathizer.RegistrationDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Sympathizer.PostCode)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Sympathizer.PostCode)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <div class="form-actions no-color">
            <a asp-action="Index" class="btn btn-small btn-default">Retourner aux sympathisants</a>
            <input type="submit" value="Supprimer" class="btn btn-small btn-default" />
        </div>
    </form>
</div>

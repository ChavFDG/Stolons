        <!--     </div> -->
        <!-- </div> -->
        <!-- <div class="form-group"> -->
        <!--     <label class="col-md-2 control-label">3ieme photo</label> -->
        <!--     <div class="col-md-10"> -->
        <!--         <input id="UploadFile3" type="file" accept="image/*" name="UploadFile3" class="form-control" /> -->
        <!--     </div> -->
        <!-- </div> -->

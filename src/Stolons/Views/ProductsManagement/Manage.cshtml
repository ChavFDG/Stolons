                <span validation-for="Product.HideWeightPrice" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label id="priceLabel" asp-for="Product.WeightPrice" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input id="price" asp-for="Product.WeightPrice" class="form-control" data-val-number="Le prix doit être un nombre." />
                <span asp-validation-for="Product.WeightPrice" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Product.UnitPrice" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input id="unitPrice" asp-for="Product.UnitPrice" class="form-control" data-val-required="Le prix unitaire est obligatoire" data-val-number="Le prix unitaire doit être un nombre." />
                <span asp-validation-for="Product.UnitPrice" class="text-danger" />
            </div>

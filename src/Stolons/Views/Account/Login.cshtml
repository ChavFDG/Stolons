@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

  @{
     ViewData["Title"] = "Identification";
  }

  <h2>@ViewData["Title"].</h2>
  <p></p>
  <div class="row">
    <div class="col-md-8">
      <section>
        <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
          <hr />
          <div class="form-group">
            <label asp-for="Email" class="col-md-2 control-label"></label>
            <div class="col-md-10">
              <input asp-for="Email" class="form-control" data-val-required="L'adresse email est requise pour se connecter" />
              <span asp-validation-for="Email" class="text-danger"></span>
            </div>
          </div>
          <div class="form-group">
            <label asp-for="Password" class="col-md-2 control-label"></label>
            <div class="col-md-10">
              <input asp-for="Password" class="form-control" data-val-required="Le mot de passe doit être renseigné" />
              <span asp-validation-for="Password" class="text-danger"></span>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
              <button type="submit" class="btn btn-default">Se connecter</button>
            </div>
          </div>
          <p>
            <a asp-action="ForgotPassword">J'ai oublié mon mot de passe</a>
          </p>
        </form>
      </section>
    </div>
  </div>

  @section Scripts {
  @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
  }

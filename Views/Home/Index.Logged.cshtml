<div class="row">
    <div class="col-lg-8">
        <h2>Les nouvelles</h2>
        @{
            Html.RenderPartial("../News/ShowNews", Model.NewsVm);
        }
    </div>
    <div class="col-lg-4">
        <div class="col-lg-12">
            <div class="col-lg-12 comment">lala</div>
            <div class="col-lg-12 comment">lili</div>
        </div>
        <div class="col-lg-12">
            <textarea id="add-comment" name="comment" placeholder="Votre message"></textarea>
            <a href="#" id="add-comment" class="btn btn-small btn-default pull-right">Ajouter un commentaire</a>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('a#add-comment').on('click', function () {
            var comment = $('textarea[name=comment]').val();
            $('textarea[name=comment]').removeClass('error');

            if (comment !== '') {
                var link = '@Html.Raw(Url.Action("AddMessage", "Chat"))';
                $.ajax({
                    type: "POST",
                    url: link,
                    data: {message: comment},
                    success: function (data) {
                        $('<div class="col-lg-12 comment">' + comment + '</div>').insertAfter('div.comment:last');
                    },
                });
            } else {
                $('textarea[name=comment]').addClass('error');
            }
            return false;
        });

    });
</script>



@using Stolons.ViewModels.Chat

@model ChatMessageListViewModel

<div>
    <div class="col-lg-12 chat">
        @foreach (var message in Model.Messages)
        {
            <div class="col-lg-12 comment" data-date="@(message.DateOfPublication + "." + message.DateOfPublication.Millisecond)">
                <div class="col-lg-3"><img src="https://i.skyrock.net/3474/29633474/pics/2693212498_small_1.jpg"/></div>
                <div class="col-lg-9">
                    @message.Content
                    <div class="text-right date">Par Toto le 07/11/2017 à 21h25</div>
                </div>
            </div>
        }
    </div>
    <div class="col-lg-12">
        <textarea id="add-comment" name="comment" placeholder="Votre message"></textarea>
        <a href="#" id="add-comment" class="btn btn-small btn-default pull-right">Ajouter un commentaire</a>
        <span class="glyphicon glyphicon-refresh glyphicon-refresh-animate hidden" id="loading"></span>
    </div>
    <script type="text/javascript">
        function getHtml(message, data) {
            return '<div class="col-lg-12 comment" data-date="' + message.DateOfPublication + '"><div class="col-lg-3"><img src="' + data.ActiveAdherentStolon.Adherent.AvatarFilePath + '"/></div><div class="col-lg-9">' + message.Content + '<div class="text-right date">Par ' + data.ActiveAdherentStolon.Adherent.Surname + '</div></div></div>';
    }
     function getNewMessages() {
        var link = '@Html.Raw(Url.Action("GetNewMessages", "Chat"))';
        var lastMessageDate = $('div.comment').last().attr('data-date');

        $.ajax({
            type: "POST",
            data: { date: lastMessageDate },
            url: link,
            dataType: 'json',
            success: function (data) {
                $.each(data.Messages, function (i, message) {
                    $(getHtml(message, data)).insertAfter('div.comment:last');
                });
            },
        });
    }
    $(document).ready(function () {
        $('a#add-comment').on('click', function () {
            var $this = $(this);

            var comment = $('textarea[name=comment]').val();
            $('textarea[name=comment]').removeClass('error');

            if (comment !== '') {
                $(this).addClass('hidden');
                $('span#loading').removeClass('hidden');

                var link = '@Html.Raw(Url.Action("AddMessage", "Chat"))';
                var lastMessageDate = $('div.comment').last().attr('data-date');
                $('textarea[name=comment]').val('');
                $.ajax({
                    type: "POST",
                    url: link,
                    data: { message: comment, date: lastMessageDate },
                    dataType: 'json',
                    success: function (data) {
                        $this.removeClass('hidden');
                        $('span#loading').addClass('hidden');
                        $.each(data.Messages, function (i, message) {
                            $(getHtml(message, data)).insertAfter('div.comment:last');
                        });

                        $("div.chat").animate({ scrollTop: 5000 }, 1000);
                    },
                });
            } else {
                $('textarea[name=comment]').addClass('error');
            }
            return false;
        });

        window.setInterval(function () {
            getNewMessages();
        }, 30000);
    });
    </script>

</div>

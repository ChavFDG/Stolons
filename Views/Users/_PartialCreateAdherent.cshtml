@model Stolons.ViewModels.Adherents.AdherentViewModel

<form asp-action="CreateAdherent" enctype="multipart/form-data" name="editAdherent">
    <div class="modal-body">
        @Html.Partial("EditAdherent")
    </div>
    <div class="modal-footer">
        <input type="submit" id="create-adherent" value="Créer le nouvel adhérent" class="btn btn-small btn-default" />
    </div>
</form>

<script>

 $(function () {
     $('form[name="editAdherent"]').validate();

     $('form[name="editAdherent"]').on('submit', function () {
         return $(this).valid();
     });
 });
 
</script>

@model TransactionViewModel
@using Stolons.ViewModels.Transactions


<div class="form-horizontal">
    <input asp-for="Stolon.Id" hidden="hidden" />
    <input asp-for="Transaction.Id" hidden="hidden" />
    <input asp-for="Transaction.StolonId" hidden="hidden" />
    <input asp-for="Transaction.AddedAutomaticly" hidden="hidden" />
    <div class="form-group">
        <label asp-for="Transaction.Type" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="Transaction.Type" asp-items="@(Html.GetEnumSelectList<Stolons.Models.Transactions.Transaction.TransactionType>())" class="form-control"></select>
            <span asp-validation-for="Transaction.Type" class="text-danger" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Transaction.Category" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="Transaction.Category" asp-items="@(Html.GetEnumSelectList<Stolons.Models.Transactions.Transaction.TransactionCategory>())" class="form-control"></select>
            <span asp-validation-for="Transaction.Category" class="text-danger" />
        </div>
    </div>
    <div class="form-group" id="Transaction.Date">
        <label asp-for="Transaction.Date" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Transaction.Date" class="form-control" id="InputTransactionDate" value="@Model.Transaction.Date" />
            <span asp-validation-for="Transaction.Date" class="text-danger" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Transaction.Description" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <textarea rows="5" asp-for="Transaction.Description" class="form-control"></textarea>
            <span asp-validation-for="Transaction.Description" class="text-danger" />
        </div>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Transaction.Amount" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Transaction.Amount" class="form-control" />
            <span asp-validation-for="Transaction.Amount" class="text-danger" />
        </div>
    </div>
</div>

<script>
 $("#InputTransactionDate").datetimepicker({sideBySide: true, format: "DD/MM/YYYY HH:mm:ss"});
</script>

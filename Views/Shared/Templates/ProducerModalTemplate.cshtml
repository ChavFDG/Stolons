<script id="producerModalTemplate" type="text/template">
  <div id="producerModalTemplate" class="modals">
    <div class="modal-dialog">
        <div class="modal-content">
	        <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <div class="producerModalTitle">
                </div>
	        </div>
	        <div class="modal-body">
		    <div class="producerModalAvatar">
                        <img class="avatar" src="<%= producer.AvatarFilePath %>" />
                    </div>
                    <span class="producerDetailsTitle"><a href="/Producers#<%= producer.Id %>">Détail du producteur &ldquo;<%= producer.CompanyName %>&rdquo;</a></span>
		    <div class="producerInfoList">
           <ul>
           <% if (!_.isEmpty(producer.Adress)) { %>
               <li>
                    <label>Adresse: </label>
                    <span><%= producer.Adress %></span>
               </li>
	   <% } %>
	       <li>
	           <label>Proprietaire: </label>
	           <span><%= producer.Name %> <%= producer.Surname %> </span>
	       </li>
	       <li>
	           <label>Superficie de production: </label>
	           <span><%= producer.Area %> ha</sup> </span>
	       </li>
	   <% if (producer.Production) { %>
	       <li>
	           <label>Production: </label>
	           <span><%= producer.Production %></span>
	       </li>
	   <% } %>
	       <li>
	           <label>Année d'installation: </label>
	           <span><%= producer.StartDate %></span>
	       </li>
	   <% if (producer.WebSiteLink) { %>
	       <li>
	           <label>Site web: </label>
	           <a href="<%= producer.WebSiteLink %>" target="_blank"><%= producer.WebSiteLink %></a>
	       </li>
	   <% } %>
	   <% if (producer.OpenText) { %>
	       <li>
	           <label>Le mot du producteur: </label>
	           <p class="producerOpenText">
		       <%= producer.OpenText %>
	           </p>
	       </li>
	   <% } %>
        </ul>
    </div>

                <div class="text-center"></div>
	        </div>
        </div>
    </div>
  </div>
</script>

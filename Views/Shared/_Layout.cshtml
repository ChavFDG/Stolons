<!DOCTYPE html>
@using Microsoft.AspNetCore.Identity;
@using System.Security.Claims;
@using Stolons.ViewModels;

<html>
    <head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Stolons - Commande en ligne de produits bio et locaux</title>
	<meta name="Description" content="Stolons est un outil à but non lucratif de commandes hebdomadaires de produits certifiés de l'agriculture biologique provenants de moins de 50 km du lieu de dépôt. Et si on mangeait Bio et Local ?" />
	<meta name="Keywords" content="stolon stolons" />
	<meta name="Keywords" content="panier bio local" />
	<meta name="Keywords" content="drive bio" />
	<meta name="Keywords" content="circuits courts" />
	<meta name="Keywords" content="alimentation bio" />
	<meta name="Keywords" content="manger bio et local" />
	<meta name="Keywords" content="producteurs bio" />
	<meta name="Keywords" content="agriculture biologique" />
	<meta name="Keywords" content="Agri Bio Ardèche" />

	<link rel="stylesheet" href="~/css/select2.min.css" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
	<link rel="stylesheet" href="~/lib/jquery-ui/jquery-ui.structure.min.css" />
	<link rel="stylesheet" href="~/lib/jquery-ui/jquery-ui.theme.min.css" />
	<link rel="stylesheet" href="~/lib/fontawesome-free-5.3.1-web/css/all.css">
	<link rel="stylesheet" href="~/lib/cookiealert/cookiealert.css">
	<link rel="stylesheet" href="~/css/bootstrap-datetimepicker.min.css">
	
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/underscore-min.js"></script>
	<script src="~/lib/backbone-min.js"></script>
	<script src="~/lib/select2.full.min.js"></script>
	<script src="~/lib/tinymce/tinymce.min.js"></script>
	<script src="~/lib/jquery-ui/jquery-ui.min.js"></script>

	<script>
	 /*** Handle jQuery plugin naming conflict between jQuery UI and Bootstrap ***/
	 $.widget.bridge('uibutton', $.ui.button);
	 $.widget.bridge('uitooltip', $.ui.tooltip);
	</script>

	<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
	<script src="~/lib/bootbox.min.js"></script>
	<script src="~/lib/jquery.blockUI.js"></script>
	<script src="~/lib/moment.min.js"></script>
	<script src="~/lib/moment-fr.js"></script>
	<script src="~/lib/bootstrap-datetimepicker.min.js"></script>
	<script src="~/js/site.js"></script>

	<!-- Jquery dotnetcore js Validation -->
	<script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation/additional-methods.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
	<!-- Re-define french error messages and add custom validation methods !important -->
	<script src="~/js/formValidation.js"></script>
    </head>
    <body>
	<div id="wrapper">
            @if (User.Identity.IsAuthenticated)
            {
		@await Component.InvokeAsync("Banner")
            }
            <div class="buddy container body-content">
		@RenderBody()
            </div>
	    <!-- Include the footer partial -->
	    @{ await Html.RenderPartialAsync("Footer"); }
	</div>

	<div class="modal fade" id="bodyAndFooterModal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
		<div class="modal-content">
                    <div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			<h4 class="modal-title"></h4>
                    </div>
                    <div class="modal-bodyAndFooter">

                    </div>
		</div>
            </div>
	</div>
	@RenderSection("scripts", required: false)
    </body>
</html>
